# =============================================================================
# TORPLEX ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (kept for potential future use)
# -----------------------------------------------------------------------------
DB_PASSWORD=torplex_secure_password_change_me

# -----------------------------------------------------------------------------
# Debrid Services
# -----------------------------------------------------------------------------
REAL_DEBRID_TOKEN=your_real_debrid_token
TORBOX_API_KEY=your_torbox_api_key
TORBOX_EMAIL=your_torbox_email@example.com

# -----------------------------------------------------------------------------
# Media APIs
# -----------------------------------------------------------------------------
TMDB_API_KEY=your_tmdb_api_key

# -----------------------------------------------------------------------------
# Plex Configuration
# -----------------------------------------------------------------------------
PLEX_TOKEN=your_plex_token
PLEX_URL=http://localhost:32400
PLEX_CLAIM=        # Optional: claim token for initial Plex setup

# -----------------------------------------------------------------------------
# Prowlarr (Indexer Manager)
# Get API key from: Prowlarr → Settings → General → Security → API Key
# -----------------------------------------------------------------------------
PROWLARR_URL=http://prowlarr:9696
PROWLARR_API_KEY=your_prowlarr_api_key

# -----------------------------------------------------------------------------
# Sonarr (TV Series)
# Get API key from: Sonarr → Settings → General → Security → API Key
# -----------------------------------------------------------------------------
SONARR_API_KEY=your_sonarr_api_key

# -----------------------------------------------------------------------------
# Radarr (Movies)
# Get API key from: Radarr → Settings → General → Security → API Key
# -----------------------------------------------------------------------------
RADARR_API_KEY=your_radarr_api_key

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
TZ=Europe/Amsterdam
PUID=1000
PGID=1000
